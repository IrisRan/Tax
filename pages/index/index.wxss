/**index.wxss**/

.header {
  align-items: center;
}

.header .city {
  font-size: 16px;
  color: #99CC33;
  text-align: center;
  border-right: 1px solid #666666;
  width:50%;
  position:absolute; /*使并排显示*/
}

.pick {

}

.header .remainder {
  margin-left: 50%; /*使并排显示*/
  font-size: 16px;
  color: #99CC33;
  text-align: center;
}

.menu-n-items {
  display: flex;
  position: absolute;
  width: 100%;
  top: 40px;
  bottom: 80px;
  overflow: hidden;
}

.menu-n-items .menu {
  flex: 0 0 80px;
  width: 80px;
  background: #f3f5f7;
}

.menu-n-items .menu .menu-item {
  display: table;
  width: 80px;
  height: 50px;
  line-height: 14px;
}

.menu-n-items .menu .menu-item:current {
  position: relative;
  z-index: 10;
  margin-top: -1px;
  background: #fff;
}

.menu-n-items .menu .menu-item:active {
  background: #99CC33;
}

.menu-n-items .menu .menu-item:current .text {
  border: none;
}

.menu-n-items .menu .menu-item .text {
  display: table-cell;
  width: 56px;
  vertical-align: middle;
  position: relative;
  font-size: 14px;
  color: #333333;
  border-bottom:1px solid rgba(7,17,27,0.1);
}
.menu-n-items .items {
  flex: 0 0 320px;
}

.menu-n-items .items .items-list .title {
  padding-left: 14px;
  height: 26px;
  line-height: 26px;
  border-left: 2px solid #d9dde1;
  font-size: 12px;
  color: rgb(147, 153, 159);
  background: #f3f5f7;
}

.menu-n-items .items .items-list .item-item {
  display: flex;
  margin: 16px;
  border-bottom: 1px solid rgba(7,17,27,0.1);
  vertical-align: middle;
}

.menu-n-items .items .items-list .item-item .content {
  flex: 1;
  width: 30%;
  border-right: 1px solid rgba(7,17,27,0.1);
}

.menu-n-items .items .items-list .item-item .content .name {
  font-size: 14px;
  line-height: 16px;
  height: 30px;
  color: #333333;
  overflow: hidden;
}

.menu-n-items .items .items-list .item-item .input {
  font-size: 14px;
  vertical-align: middle;
  width: 70%;
}

.cart {
  height: 40px;
  width: 100%;
  position: absolute;
  bottom: 0px;
  align-items: center;
} 

.cart .count {
  font-size: 16px;
  color: #333333;
  text-align: center;
  border-right: 1px solid #666666;
  width: 50%;
  position: absolute;
}

.cart  .sum {
  margin-left: 50%; /*使并排显示*/
  font-size: 16px;
  color: #99CC33;
  text-align: center;
}
